@model IEnumerable<(Guid id, int year, string status)>

<h2>Elecciones</h2>

<form asp-action="Crear" method="post">
    @Html.AntiForgeryToken()
    <input type="number" name="year" placeholder="Año" required />
    <button type="submit">Crear</button>
</form>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table">
    <thead><tr><th>Año</th><th>Estado</th><th>Acciones</th></tr></thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.year</td>
                <td>@e.status</td>
                <td>
                    <form asp-action="ConstruirBoleta" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@e.id" />
                        <button type="submit">Construir boleta</button>
                    </form>
                    <form asp-action="Activar" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@e.id" />
                        <button type="submit">Activar</button>
                    </form>
                    <form asp-action="Finalizar" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@e.id" />
                        <button type="submit">Finalizar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
