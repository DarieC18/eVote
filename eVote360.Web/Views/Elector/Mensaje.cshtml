@model string
@{
    ViewData["Title"] = "Resultado";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="text-center mb-4">
                <i class="bi bi-megaphone-fill text-primary" style="font-size:3rem;"></i>
                <h2 class="mt-3 fw-semibold">Información</h2>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <p class="lead text-center mb-0">@Model</p>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-2 mt-4">
                <a asp-controller="Elector" asp-action="Boleta" class="btn btn-outline-primary">
                    <i class="bi bi-card-checklist"></i> Ir a la boleta
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-house-door"></i> Ir al inicio
                </a>
            </div>

        </div>
    </div>
</div>
