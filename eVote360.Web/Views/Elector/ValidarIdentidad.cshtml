@{
    ViewData["Title"] = "Validar Identidad";
}
<h3 class="mt-2">Validar identidad</h3>
<p class="text-muted">Sube una foto del frente de tu documento para validar tu identidad.</p>

<form asp-action="ValidarIdentidad" method="post" enctype="multipart/form-data" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Documento (frontal)</label>
        <input type="file" name="documentoFrontal" class="form-control" />
    </div>

    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <button class="btn btn-primary" type="submit">Validar</button>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</form>
