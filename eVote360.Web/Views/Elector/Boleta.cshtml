@model EVote360.Web.Models.BoletaVm
@{
    ViewData["Title"] = "Boleta de Votación";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="h4 fw-semibold mb-0 d-flex align-items-center">
            <i class="bi bi-card-checklist me-2"></i> Boleta de votación
        </h2>
        <span class="text-muted small">Elección ID: @Model.ElectionId</span>
    </div>

    @if (Model.Puestos == null || !Model.Puestos.Any())
    {
        <div class="alert alert-info">
            No hay puestos disponibles en este momento.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var p in Model.Puestos)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-start justify-content-between mb-2">
                                <h5 class="card-title fw-semibold mb-0">@p.PositionName</h5>
                                @if (p.YaVotado)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Votado</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pendiente</span>
                                }
                            </div>

                            <p class="text-muted small mb-4">
                                <i class="bi bi-people me-1"></i>Partidos: <strong>@p.Partidos</strong> &nbsp;·&nbsp;
                                <i class="bi bi-person-badge me-1"></i>Candidatos: <strong>@p.Candidatos</strong>
                            </p>

                            <div class="mt-auto">
                                @if (p.YaVotado)
                                {
                                    <button class="btn btn-outline-success w-100" disabled>
                                        <i class="bi bi-check2"></i> Ya registraste tu voto
                                    </button>
                                }
                                else
                                {
                                    <a class="btn btn-primary w-100"
                                       asp-action="Opciones"
                                       asp-route-electionId="@Model.ElectionId"
                                       asp-route-citizenId="@Model.CitizenId"
                                       asp-route-positionId="@p.PositionId">
                                        <i class="bi bi-ui-checks me-1"></i> Votar en este puesto
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <button class="btn btn-success btn-lg px-4" data-bs-toggle="modal" data-bs-target="#confirmarModal">
                <i class="bi bi-flag-checkered me-2"></i> Finalizar y registrar voto
            </button>
        </div>

        <div class="modal fade" id="confirmarModal" tabindex="-1" aria-labelledby="confirmarModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content rounded-4">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmarModalLabel">Confirmar registro del voto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        ¿Confirmas que tus selecciones son correctas? Una vez registrado, no podrás modificar tu voto.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Seguir revisando</button>
                        <form asp-action="Finalizar" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check2-circle me-1"></i> Sí, registrar voto
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
